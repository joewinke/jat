#!/bin/bash
# bd-dashboard - Launch the Beads Task Dashboard
# Part of jomarchy-agent-tools

set -e

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Get the directory where this script is located (resolve symlinks)
SCRIPT_SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SCRIPT_SOURCE" ]; do
    SCRIPT_DIR="$( cd -P "$( dirname "$SCRIPT_SOURCE" )" && pwd )"
    SCRIPT_SOURCE="$(readlink "$SCRIPT_SOURCE")"
    [[ $SCRIPT_SOURCE != /* ]] && SCRIPT_SOURCE="$SCRIPT_DIR/$SCRIPT_SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SCRIPT_SOURCE" )" && pwd )"
DASHBOARD_DIR="$SCRIPT_DIR/dashboard"

echo -e "${GREEN}ğŸš€ Beads Task Dashboard Launcher${NC}"
echo ""

# Check if dashboard directory exists
if [ ! -d "$DASHBOARD_DIR" ]; then
    echo -e "${RED}âŒ Error: Dashboard directory not found at $DASHBOARD_DIR${NC}"
    exit 1
fi

cd "$DASHBOARD_DIR"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}ğŸ“¦ node_modules not found. Running npm install...${NC}"
    npm install
    echo -e "${GREEN}âœ… Dependencies installed${NC}"
    echo ""
fi

# Check if package.json exists
if [ ! -f "package.json" ]; then
    echo -e "${RED}âŒ Error: package.json not found${NC}"
    exit 1
fi

echo -e "${GREEN}ğŸ”§ Starting development server...${NC}"
echo ""

# Function to open browser after a delay
open_browser() {
    sleep 3

    # Detect the platform and open browser
    if command -v xdg-open > /dev/null; then
        xdg-open "http://127.0.0.1:5174" 2>/dev/null || true
    elif command -v open > /dev/null; then
        open "http://127.0.0.1:5174" 2>/dev/null || true
    else
        echo -e "${YELLOW}â„¹ï¸  Open your browser to: http://127.0.0.1:5174${NC}"
    fi
}

# Start browser opener in background
open_browser &

# Start the dev server (this blocks until Ctrl+C)
npm run dev

# Cleanup on exit
echo ""
echo -e "${GREEN}ğŸ‘‹ Dashboard stopped${NC}"
